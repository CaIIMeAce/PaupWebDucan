@using PaupWebDucan.Models
@model Proizvod

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<strong>Jeste li sigurni da želite izbrisati proizvod @Model.ImeKontrolniBroj (Skladisni broj: @Model.SkladisniBroj) ? </strong>

@using (Html.BeginForm("Brisi", "Proizvodi"))
{
    @Html.AntiForgeryToken();

    <button type="submit" class="btn btn-danger">
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Izbriši proizvod
    </button>

    <br/>
    <br/>

    @Html.ActionLink("Odustani", "PopisProizvoda");
}

